{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "./setup", "./seeds/test"]
}
