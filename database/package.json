{
  "name": "@lxcat/database",
  "version": "1.0.0",
  "description": "The web application needs an [arangodb](https://arangodb.com/) database to talk to.",
  "author": "Stefan Verhoeven",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "setup": "node --experimental-specifier-resolution=node --loader ts-node/esm src/cli/seed.ts setup",
    "seed": "node --experimental-specifier-resolution=node --loader ts-node/esm src/cli/seed.ts",
    "make-admin": "node --experimental-specifier-resolution=node --loader ts-node/esm src/cli/make_admin.ts",
    "drop-database": "node --experimental-specifier-resolution=node --loader ts-node/esm src/cli/drop_database.ts",
    "reload": "npm run drop-database && npm run setup && npm run seed seeds/test",
    "load-css": "node --experimental-specifier-resolution=node --loader ts-node/esm src/cli/load_css.ts",
    "format": "prettier --write src/ seeds/ setup/",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint --ext .ts src/ seeds/ setup/",
    "test": "NODE_OPTIONS='--experimental-specifier-resolution=node --experimental-vm-modules' npx jest",
    "collectionschema:Particle": "ts-json-schema-generator -f ./tsconfig.json --path src/shared/types/collections.ts --type Particle --out src/shared/schemas/Particle.schema.json -e none --no-top-ref",
    "collectionschema:Contributor": "ts-json-schema-generator -f ./tsconfig.json --path src/shared/types/collections.ts --type Contributor --out src/shared/schemas/Contributor.schema.json -e none --no-top-ref",
    "collectionschema:Reference": "ts-json-schema-generator -f ./tsconfig.json --path src/shared/types/collections.ts --type Reference --out src/shared/schemas/Reference.schema.json -e none --no-top-ref",
    "collectionschema:State": "ts-json-schema-generator -f ./tsconfig.json --path src/shared/types/collections.ts --type State --out src/shared/schemas/State.schema.json -e none --no-top-ref",
    "collectionschema:Reaction": "ts-json-schema-generator -f ./tsconfig.json --path src/shared/types/collections.ts --type Reaction --out src/shared/schemas/Reaction.schema.json -e none --no-top-ref",
    "collectionschema:shared": "npm run collectionschema:Particle && npm run collectionschema:Contributor && npm run collectionschema:Reference && npm run collectionschema:State && npm run collectionschema:Reaction",
    "collectionschema:cs": "npm run collectionschema:CrossSection && npm run collectionschema:CrossSectionSet",
    "collectionschema:CrossSection": "ts-json-schema-generator -f ./tsconfig.json --path src/cs/collections.ts --type CrossSection --out src/cs/schemas/CrossSection.schema.json -e none --no-top-ref",
    "collectionschema:CrossSectionSet": "ts-json-schema-generator -f ./tsconfig.json --path src/css/collections.ts --type CrossSectionSet --out src/css/schemas/CrossSectionSet.schema.json -e none --no-top-ref",
    "collectionschema": "npm run collectionschema:shared && npm run collectionschema:cs"
  },
  "dependencies": {
    "@lxcat/schema": "*",
    "arangojs": "^7.7.0",
    "dotenv": "^16.0.0",
    "zod": "^3.14.2",
    "zod-to-json-schema": "^3.11.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "eslint": "8.10.0",
    "jest": "^28.1.1",
    "jest-junit": "^13.2.0",
    "prettier": "^2.6.2",
    "testcontainers": "^8.10.1",
    "ts-jest": "^28.0.4",
    "ts-json-schema-generator": "^1.1.0-next.5",
    "ts-node": "^10.7.0",
    "tsup": "^6.1.2",
    "typescript": "^4.7.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [".ts"]
  }
}
