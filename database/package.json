{
  "name": "@lxcat/database",
  "version": "1.0.0",
  "description": "The web application needs an [arangodb](https://arangodb.com/) database to talk to.",
  "author": "Stefan Verhoeven",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "setup": "ts-node src/seed.ts setup",
    "seed": "ts-node src/seed.ts",
    "make-admin": "ts-node src/make_admin.ts",
    "drop-database": "ts-node src/drop_database.ts",
    "reload": "npm run drop-database && npm run setup && npm run seed seeds/test",
    "load-css": "ts-node src/load_css.ts",
    "format": "prettier --write src/ seeds/ setup/",
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint --ext .ts src/ seeds/ setup/"
  },
  "dependencies": {
    "@lxcat/schema": "*",
    "arangojs": "^7.7.0",
    "dotenv": "^16.0.0",
    "zod": "^3.14.2",
    "zod-to-json-schema": "^3.11.3"
  },
  "devDependencies": {
    "ts-node": "^10.7.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "typescript": "^4.7.3",
    "eslint": "8.10.0",
    "prettier": "^2.6.2"
  }
}
