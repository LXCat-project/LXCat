{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    } 
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "extends": "@lxcat/tsconfig/nextjs.json"
}
