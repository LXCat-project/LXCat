{
  "name": "@lxcat/converter",
  "version": "0.1.0",
  "description": "Convert LXCat JSON documents to legacy LXCat documents",
  "main": "dist/index.node",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "napi": {
    "name": "dist/index"
  },
  "scripts": {
    "dev": "npm run build",
    "build": "napi build --release --strip --dts dist/index.d.ts",
    "build:debug": "napi build --dts dist/index.d.ts",
    "test": "node --loader ts-node/esm --test tests/valid.test.ts",
    "addheader": "reuse addheader --license=Apache-2.0 --copyright='LXCat team' -r --skip-existing --exclude-year --skip-unrecognised src tests",
    "clean": "rm rf target dist",
    "prepublishOnly": "npm run build"
  },
  "author": "Daan Boer",
  "license": "Apache-2.0",
  "devDependencies": {
    "@napi-rs/cli": "^2.10.0",
    "@types/node": "^18.7.15",
    "ts-node": "10.8.1",
    "typescript": "^4.8.2"
  }
}
