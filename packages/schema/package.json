{
  "name": "@lxcat/schema",
  "version": "1.0.0",
  "description": "Schema and validator for LXCat",
  "scripts": {
    "json:css": "ts-json-schema-generator -f ./tsconfig.json --no-top-ref --path src/css/input.ts --type CrossSectionSetRaw --out src/css/CrossSectionSetRaw.schema.json -e none",
    "json": "npm run json:css",
    "build": "tsc",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write src/",
    "test": "vitest",
    "dev": "tsc --watch",
    "addheader": "reuse addheader --license=Apache-2.0 --copyright='LXCat developer team' -r --skip-existing --exclude-year src"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.11.0",
    "ts-json-schema-generator": "^1.1.0-next.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "c8": "^7.11.3",
    "eslint": "8.10.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3",
    "vitest": "^0.15.1"
  }
}
