{
  "name": "@lxcat/schema",
  "version": "0.1.0",
  "description": "Schema and validator for LXCat",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "json:doc": "bun src/cli/document-schema.ts",
    "json:mix": "bun src/cli/mixture-schema.ts",
    "json:migration": "bun src/cli/migration-schema.ts",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "format": "dprint fmt",
    "annotate": "reuse annotate --license=Apache-2.0 --copyright='LXCat team' -r --skip-existing --exclude-year src",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lxcat/tsconfig": "workspace:^",
    "@types/bun": "^1.3.6",
    "dprint": "^0.51.1",
    "eslint": "9.39.2",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./species": {
      "types": "./dist/species/index.d.ts",
      "default": "./dist/species/index.js"
    },
    "./species/atoms": {
      "types": "./dist/species/atoms/index.d.ts",
      "default": "./dist/species/atoms/index.js"
    },
    "./species/molecules": {
      "types": "./dist/species/molecules/index.d.ts",
      "default": "./dist/species/molecules/index.js"
    },
    "./process": {
      "types": "./dist/process/index.d.ts",
      "default": "./dist/process/index.js"
    },
    "./data-types": {
      "types": "./dist/common/data-types.d.ts",
      "default": "./dist/common/data-types.js"
    },
    "./reference": {
      "types": "./dist/common/reference.d.ts",
      "default": "./dist/common/reference.js"
    },
    "./json-schema": {
      "types": "./dist/json-schema/index.d.ts",
      "default": "./dist/json-schema/index.js"
    },
    "./migration": {
      "types": "./dist/migration/index.d.ts",
      "default": "./dist/migration/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
