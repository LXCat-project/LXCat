{
  "name": "@lxcat/schema",
  "version": "0.1.0",
  "description": "Schema and validator for LXCat",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "json:css": "ts-json-schema-generator -f ./tsconfig.json --no-top-ref --path src/css/input.ts --type CrossSectionSetRaw --out src/css/CrossSectionSetRaw.schema.json -e none",
    "json": "pnpm json:css",
    "build": "tsc",
    "lint": "eslint src/ --ext .ts",
    "format": "dprint fmt",
    "test": "vitest",
    "dev": "tsc --watch",
    "annotate": "reuse annotate --license=Apache-2.0 --copyright='LXCat team' -r --skip-existing --exclude-year src",
    "prepublishOnly": "pnpm build",
    "clean": "rm -rf dist"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.12.0",
    "ts-json-schema-generator": "^1.2.0"
  },
  "devDependencies": {
    "@lxcat/tsconfig": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@vitest/coverage-v8": "^0.34.1",
    "dprint": "^0.40.2",
    "eslint": "8.46.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "main": "dist/css/validate.js",
  "types": "dist/css/validate.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
