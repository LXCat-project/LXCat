{
  "name": "@lxcat/database",
  "version": "0.1.0",
  "description": "Database abstraction layer for LXCat web application.",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./item": {
      "types": "./dist/cs/index.d.ts",
      "default": "./dist/cs/index.js"
    },
    "./item/picker": {
      "types": "./dist/cs/picker/index.d.ts",
      "default": "./dist/cs/picker/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "default": "./dist/auth/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    },
    "./set": {
      "types": "./dist/css/index.d.ts",
      "default": "./dist/schema/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "default": "./dist/shared/index.js"
    },
    "./test": {
      "types": "./dist/test/index.d.ts",
      "default": "./dist/test/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "private": true,
  "scripts": {
    "setup": "bun src/cli/setup.ts",
    "seed": "bun src/cli/seed.ts",
    "make-admin": "bun src/cli/make-admin.ts",
    "drop-database": "bun src/cli/drop-database.ts",
    "drop-non-user": "bun src/cli/drop-non-user.ts",
    "reload": "bun drop-database && bun setup && bun seed seeds/test",
    "load-orgs": "bun src/cli/load-orgs.ts",
    "load-css": "bun src/cli/load-css.ts",
    "format": "dprint fmt",
    "clean": "rm -rf dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint src",
    "annotate": "reuse annotate --license=AGPL-3.0-or-later --copyright='LXCat team' -r --skip-existing --exclude-year src"
  },
  "dependencies": {
    "@lxcat/schema": "workspace:^",
    "arangojs": "^8.8.1",
    "deep-equal": "^2.2.3",
    "dotenv": "^17.3.1",
    "true-myth": "^9.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lxcat/tsconfig": "workspace:^",
    "@testcontainers/arangodb": "^11.11.0",
    "@types/bun": "^1.3.9",
    "@types/deep-equal": "^1.0.4",
    "dprint": "^0.51.1",
    "eslint": "9.39.2",
    "globals": "^17.3.0",
    "testcontainers": "^11.11.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
